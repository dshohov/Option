@{
}

<link rel="stylesheet" href="~/css/css.css">

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <a asp-controller="Sertification" asp-action="Index" class="btn btn-sm btn-warning mb-3 text-white btn-outline-secondary">Назад</a>
            <h3 class="my-3">Id: @Model.Id</h3>
            <h4>@Model.Name</h4>
            
        </div>
    </div>
</div>
<a asp-controller="Sertification" asp-action="Edit" asp-route-id="@Model.Id" class="border-3 btn btn-sm btn-outline-warning ">Изменить</a>
