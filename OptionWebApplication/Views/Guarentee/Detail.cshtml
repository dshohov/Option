@model Guarentee
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<link rel="stylesheet" href="~/css/css.css">

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <a asp-controller="Guarentee" asp-action="Index" class="btn btn-sm btn-warning text-white mb-3 btn-outline-secondary">Назад</a>  
            <h3 class="my-3">Серийный номер: @Model.SerialNumber</h3>
            <p>Тип девайса: @Model.TypeDevice</p>
            <h3 class="my-3">Подробности</h3>
            <ul>
                <li>Дата получения: @Model.DateIn</li>
                <li>Дата отправки: @Model.DateOut</li>
                <li>Рекламация: @Model.Details</li>
                <li>Выявленые не исправности: @Model.FaultDetection</li>
                <li>Заключение: @Model.Conclusion</li>
                <li>Диагностику проводил: @Model.DiagnosticPeople</li>
                <li>Проведеные работы: @Model.ComplectedWork</li>
                <li>Ремонт произвёл: @Model.RepairPeople</li>
            </ul>
        </div>
    </div>
</div>
<a asp-controller="Guarentee" asp-action="Edit" asp-route-id="@Model.Id" class="border-3 btn btn-sm btn-outline-warning ">Изменить</a>
<a asp-controller="Guarentee" asp-action="Delete" asp-route-id="@Model.Id" class="border-3 btn btn-sm btn-outline-danger ">Удалить</a>
<a asp-controller="Guarentee" asp-action="GetFileSerialNumber" class="border-3 btn btn-sm btn-outline-danger ">Печать Документа</a>
<a asp-controller="Guarentee" asp-action="GetSertificationFile" asp-route-id="@Model.Id" class="border-3 btn btn-sm btn-outline-danger ">Печать спецефикации</a>
<a asp-controller="Guarentee" asp-action="GetSignatureFile" asp-route-id="@Model.Id" class="border-3 btn btn-sm btn-outline-danger ">Печать документа с Подписями</a>